{
  "compilerOptions": {
    "incremental": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "strict": true,
    "noImplicitReturns": true,
    "moduleResolution": "node",
    "stripInternal": true,
    "noEmit": false,
    "esModuleInterop": true,
    "lib": [
      "esnext",
      "dom"
    ],
    "target": "esnext",
    "baseUrl": ".",
    "paths": {
      "easy-auth-js": ["./index"],
    }
  },
  "include": ["./**/*.ts"],
  "exclude": ["node_modules", "dist", "./**/*.spec.ts"]
}